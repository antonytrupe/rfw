{
    "verbose": true,
    "ignore": [
        "node_modules",
        ".next"
    ],
    "watch": [
        "src/PersistanceEngine.ts",
        "src/GameEngine.ts",
        "src/ServerEngine.ts",
        "src/GameWorld.ts",
        "src/Geometry.ts",
        "src/server.ts",
        "nodemon.json",
        "src/types/*"
    ],
    "ext": "js json ts tsx jsx",
    "exec": "ts-node --pretty --transpile-only --project tsconfig.server.json src/server.ts",
    "delay": "6000"
}
